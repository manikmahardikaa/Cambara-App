<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:padding="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Small Icon"
                android:elevation="8dp"
                android:padding="12dp"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/text_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petunjuk Penggunaan"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/text_information_drawing_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi petunjuk penggunaan..."
                android:fontFamily="@font/poppins_medium"
                android:textSize="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="fill_vertical"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/text_information_drawing_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi petunjuk penggunaan..."
                android:fontFamily="@font/poppins_medium"
                android:textSize="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="fill_vertical" />

            <TextView
                android:id="@+id/text_information_drawing_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi petunjuk penggunaan..."
                android:fontFamily="@font/poppins_medium"
                android:textSize="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="fill_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>


            <Button
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutup"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
